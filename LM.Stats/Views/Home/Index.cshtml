@{
    ViewData["Title"] = "LM StatsInfo";
}

<div class="container mt-5">
    <div id="alerts"></div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>LM Stats Dashboard</h3>
                </div>
                <div class="card-body">
                    <button id="importBtn" class="btn btn-primary">Import from Google Sheets</button>
                    <button id="backupBtn" class="btn btn-secondary ml-2">Backup to Google Drive</button>
                    <button id="syncBtn" class="btn btn-info ml-2">Sync from Google Drive</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1" role="dialog" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Import Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="importForm">
                    <div class="form-group">
                        <label for="dateRange">Date Range</label>
                        <input type="text" class="form-control daterange" id="dateRange" name="dateRange">
                    </div>
                    <div class="form-group">
                        <label for="uniqueId">Unique Identifier</label>
                        <input type="text" class="form-control" id="uniqueId" name="uniqueId" readonly>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitImport">Submit</button>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modals -->
<div class="modal fade" id="confirmBackupModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Backup</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to backup the database to Google Drive?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmBackup">Confirm</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmSyncModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Sync</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to sync database from Google Drive? This will replace your current database.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmSync">Confirm</button>
            </div>
        </div>
    </div>
</div>